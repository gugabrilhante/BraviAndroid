<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/actionBarLayout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/backButtonTouchArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">
        <ImageButton
            android:id="@+id/backButton"
            android:visibility="gone"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/ic_more_vert_white_24dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Citrum Loja"/>

        <ImageView
            android:id="@+id/arrowDownImageView"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/titleTextView"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_expand_more_white_24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightButtonTouchArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <ImageButton
            android:id="@+id/rightButton"
            android:visibility="gone"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/ic_search_white_24dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>